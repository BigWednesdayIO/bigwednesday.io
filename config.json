{
  "locals": {
    "url": "http://localhost:9000",
    "owner": "Michael Strutt",
    "name": "bigwednesday.io",
    "description": "Big Wednesday IO site",
    "baseUrl": "app/",
    "assets": "/assets"
  },
  "plugins": [
    "wintersmith-nunjucks",
    "wintersmith-livereload",
    "wintersmith-contents",
    "wintersmith-sitemap"
  ],
  "nunjucks": {  
    "filterdir": "app/filters",
    "filters": [
      "split",
      "id",
      "filename"
    ]
  },
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "templates": "app/templates",
  "filenameTemplate": ":file/index.html",
  "contents": "app/contents",
  "port": "9000",
  "ignore": [
    "assets/scss"
  ]
}
